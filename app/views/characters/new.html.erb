<h1>New Character</h1>

<div class = "well">
   <%= form_for [@character], html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
   <p><%= link_to "Cancel", characters_path(current_user) %>
</div>

<%= link_to 'Back', characters_path %>
