<div class="form-inputs">
  <div class="form-well well">
    <%= simple_form_for(:campaign_note, url: campaign_notes_path, method: :post, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :name %>
      <%= f.input :content %>
      <%= f.input :session_date, html5: true, input_html: {value: Date.today} %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <div class="row"><%= f.button :submit, "Save Notes", class: "btn-lg submit-button btn-primary" %></div>
    <% end %>
    </div>
  </div>
</div>