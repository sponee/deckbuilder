<% if !@xml_file.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @xml_file.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_for [@user, @xml_file], html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
   <p><%= link_to "Cancel", user_xml_files_path(current_user) %>
</div>