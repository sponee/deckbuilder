<h3>Edit <%= @campaign.name %></h3>
<div class="form-inputs">
  <div class="form-well well">
    <%= simple_form_for(@campaign, url: campaign_path, method: :patch, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :simulator_url, label: "Simulator URL" %>
      <%= f.input :next_session, html5: true, input_html: {value: Date.today} %>
      <%= f.button :submit, "Update", class: "btn-lg submit-button btn-primary" %>
    <% end %>
    </div>
  </div>
</div>