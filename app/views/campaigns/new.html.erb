<div class="container">
	<h3>Start A New Campaign</h3>
	<div class="form-inputs">
	  <div class="form-well well">
			<%= simple_form_for(@campaign, html: { class: 'form-horizontal' }) do |f| %>
				<%= f.input :gm_user_id, label: "Game Master Email", as: :string %>
				<%= f.input :name %>
				<%= f.input :description %>
				<%= f.input :simulator_url, label: "Simulator URL" %>
				<%= f.input :next_session, html5: true, input_html: {value: Date.today} %>
				<%= f.button :submit, "Begin the Campaign!", class: "btn-lg submit-button btn-primary" %>
			<% end %>
			</div>
		</div>
	</div>
</div>