      <%= csrf_meta_tags %>
   </head>
   <%= render 'layouts/header' %>
   <body>
      <div class = "container">
         <% flash.each do |key, value| %>
           <div id="alert" class="alert alert-info">
             <a href="#" data-dismiss="alert" class="close">Ã—</a>
             <ul>
               <li style="list-style-type: none;">
